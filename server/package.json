{
  "name": "board-game-server",
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "dev": "nodemon --watch './src/**/*.ts' -e ts --exec yarn start",
    "start": "ts-node src/index.ts",
    "redis-run": "docker run -p 6379:6379 --name board-game-redis -d redis",
    "redis-cli": "docker run -it --link board-game-redis:redis --rm redis redis-cli -h redis -p 6379",
    "test": "jest"
  },
  "dependencies": {
    "@nexus/schema": "^0.14.0",
    "@types/jest": "^26.0.3",
    "@types/lodash": "^4.14.157",
    "@types/redis": "^2.8.22",
    "@types/redis-mock": "^0.17.0",
    "@types/uuid": "^8.0.0",
    "graphql-redis-subscriptions": "^2.2.1",
    "graphql-yoga": "^1.18.3",
    "immer": "^7.0.5",
    "jest": "^26.1.0",
    "lodash": "^4.17.15",
    "nodemon": "^2.0.4",
    "redis": "^3.0.2",
    "redis-mock": "^0.49.0",
    "ts-jest": "^26.1.1",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "ts-node": "8.7.0",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup_tests.ts"
    ]
  }
}
