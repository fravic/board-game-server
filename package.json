    "@types/uuid": "^8.0.0",
    "jest": "^26.1.0",
    "nexus": "^0.24.2",
    "redis": "^3.0.2",
    "redis-mock": "^0.49.0",
    "ts-jest": "^26.1.1",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "ts-node": "8.7.0",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup_tests.ts"
